@using Shoc.ApiCore.Intl
@model dynamic
@inject IIntlService intlService
@{
    var lang = Model.Language?.ToString() ?? this.intlService.GetDefaultLocale();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta property="og:title" content="@Model.Title" />
    <title>@Model.Title</title>
    <style>
        body {
            margin: 0;
            padding: 0;
        }
    </style>
</head>

<body style="font-family: Arial, sans-serif; font-size: 16px; line-height: 1.5; color: #333; background-color: #f7f7f7; padding: 20px;">
<table style="max-width: 600px; margin: 0 auto; background-color: #fff; border-radius: 5px; box-shadow: 0 0 10px #333; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); padding: 20px;">
    <tr>
        <td>
            <img src="cid:header_logo"
                 alt="Enlight Studies"
                 style="border:0 none;height:auto;line-height:100%;outline:none;text-decoration:none;display:inline-block"
                 class="" data-bit="iit" width="91" height="25">
        </td>
    </tr>
    <tr>
        <td>
            <!-- START: TITLE -->
            <h1 style="font-size: 24px; font-weight: bold; margin-top: 0;">@Model.Title</h1>
            <!-- END: TITLE -->
            
            @RenderBody()

            <!-- START: FOOTER AUTOGENERATED -->
            <p style="margin-bottom: 20px;">
                — @this.intlService.Format("global.email.company", lang)
            </p>
            <!-- END: FOOTER AUTOGENERATED -->

            <!-- START: FOOTER AUTOGENERATED -->
            <hr style="height:1px;border:none;color:#c2b1b1;background-color:#c2b1b1;" />
            <p style="margin-bottom: 20px;color:#444444;font-size:12px;line-height:18px;">
                @this.intlService.Format("global.email.autogenerated", lang) @DateTime.UtcNow.ToString("g") UTC
            </p>
            <!-- END: FOOTER AUTOGENERATED -->

        </td>
    </tr>
</table>
</body>
</html>

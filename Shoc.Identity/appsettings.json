{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "IdentityServer4":  "Warning" 
    }
  },
  "AllowedHosts": "*",
  "Self": {
    "Application": "shoc-identity",
    "ExternalBaseAddress": "https://localhost:11009"
  },
  "Discovery": {
    "Primary": "static",
    "Fallback": null
  },
  "StaticDiscovery": {
    "Host": "localhost"
  },
  "GatewayDiscovery": {
    "Gateway": ""
  },
  "DataSource": {
    "ConnectionString": "Server=localhost;Port=11001;Uid=shoc;Pwd=shoc;",
    "Database": "shoc"
  },
  "Identity": {
    "PublicOrigin": "https://localhost:11009",
    "Issuer": "https://localhost:11009",
    "SigningKeyPath": "DevOnly/signature-dev.pem",
    "SignInUrl": "/sign-in",
    "SignOutUrl": "/sign-out",
    "ErrorUrl": "/error",
    "MachineClient": {
      "ClientId": "machine",
      "ClientSecret": "machine"
    },
    "InteractiveClient": {
      "ClientId": "identity",
      "AccessTokenExpiration": 3600,
      "RedirectPaths": "/signed-in;/signed-in-silent.html",
      "PostLogoutRedirectPaths": "/signed-out;/",
      "RedirectHosts": "http://localhost;https://shoc.local:11000;https://identity.shoc.local:11000"
    },
    "NativeClient": {
      "ClientId": "native",
      "AccessTokenExpiration": 3600
    }
  },
  "Mailing": {
    "Server": "",
    "Port": 465,
    "Login": "LOGIN_MAIL",
    "Password": "LOGIN_PASSWORD",
    "EncryptionType": "ssl",
    "DefaultFromEmail": "DEFAULT_SENDER",
    "DefaultFromSender": "Shoc No-Reply"
  },
  "SignOn": {
    "NoReplySender": "DEFAULT_SENDER",
    "SignUpEnabled": true
  }
}

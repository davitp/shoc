apiVersion: apps/v1
kind: Deployment
metadata:
  name: shoc-identity
  labels:
    app: shoc-identity
spec:
  replicas: 1
  selector:
    matchLabels:
      app: shoc-identity
  template:
    metadata:
      labels:
        app: shoc-identity
    spec:
      imagePullSecrets:
        - name: shoc-registry-pull-secret
      restartPolicy: Always
      containers:
        - name: shoc-identity
          image: {{registry.registry}}/{{registry.repository}}/shoc-identity:{{registry.publicVersion}}
          imagePullPolicy: {{registry.pullPolicy}}
          ports:
            - containerPort: 11008
          envFrom:
            - configMapRef:
                  name: shoc-identity-config
            - secretRef:
                  name: shoc-api-auth-ref-secret
            - secretRef:
                  name: shoc-api-discovery-ref-secret
            - secretRef:
                  name: shoc-database-sql-ref-secret